<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import com.gluonhq.charm.glisten.control.ToggleButtonGroup?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="800.0" spacing="30.0">
               <children>
                  <Icon content="HELP_OUTLINE" prefHeight="70.0" prefWidth="50.0" />
                  <TextField prefHeight="26.0" prefWidth="304.0" />
                  <Icon content="HELP_OUTLINE" />
                  <RadioButton mnemonicParsing="false" selected="true" text="Hashtag">
                     <toggleGroup>
                        <ToggleGroup fx:id="searchChoice" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Tag" toggleGroup="$searchChoice" />
               </children>
            </HBox>
            <VBox prefHeight="530.0" prefWidth="800.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" style="-fx-border-width: 0 0 0 0;" VBox.vgrow="ALWAYS">
                     <children>
                        <ToggleButtonGroup selectionType="SINGLE" style="-fx-padding: 0;">
                            <toggles>
                                <ToggleButton>
                                    <graphic>
                                        <Icon content="FORMAT_ALIGN_LEFT" />
                                    </graphic>
                                </ToggleButton>
                                <ToggleButton selected="true">
                                    <graphic>
                                        <Icon content="FORMAT_ALIGN_CENTER" style="-fx-padding: 10;" />
                                    </graphic>
                                </ToggleButton>
                                <ToggleButton>
                                    <graphic>
                                        <Icon content="FORMAT_ALIGN_RIGHT" />
                                    </graphic>
                                </ToggleButton>
                            </toggles>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </ToggleButtonGroup>
                     </children>
                  </HBox>
                  <ScrollPane hbarPolicy="NEVER" prefHeight="480.0" prefWidth="800.0">
                     <content>
                        <VBox prefHeight="500.0" prefWidth="800.0">
                           <children>
                              <ListView prefHeight="472.0" prefWidth="800.0" />
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
