<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="800.0" spacing="30.0">
               <children>
                  <TextField prefHeight="26.0" prefWidth="304.0" />
                  <RadioButton mnemonicParsing="false" selected="true" text="Hashtag">
                     <toggleGroup>
                        <ToggleGroup fx:id="searchChoice" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Tag" toggleGroup="$searchChoice" />
               </children>
            </HBox>
            <VBox prefHeight="530.0" prefWidth="800.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" style="-fx-border-width: 0 0 0 0;" VBox.vgrow="ALWAYS" />
                  <ScrollPane hbarPolicy="NEVER" prefHeight="480.0" prefWidth="800.0">
                     <content>
                        <ListView fx:id="postList" prefHeight="478.0" prefWidth="799.0" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
