                                 <font>
                                    <Font size="9.0" />
                                 </font>
                              </Text>
                              <TextField fx:id="hashtags" promptText="These hashtags">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </TextField>
